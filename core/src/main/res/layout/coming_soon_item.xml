<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_coming_soon"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded"
        android:contentDescription="@string/movie_poster"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_comingSoon_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFFFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_coming_soon"
        app:layout_constraintEnd_toStartOf="@+id/tv_comingSoon_rate"
        app:layout_constraintStart_toEndOf="@+id/iv_coming_soon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Movie Name" />

    <TextView
        android:id="@+id/tv_comingSoon_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:textColor="#FFFFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_comingSoon_rate"
        app:layout_constraintStart_toStartOf="@+id/tv_comingSoon_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_comingSoon_name"
        tools:text="Genre" />

    <TextView
        android:id="@+id/tv_comingSoon_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_star_24"
        android:fontFamily="sans-serif"
        android:text="@string/n_a"
        android:textColor="#FFFFFFFF"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_coming_soon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_coming_soon" />

</androidx.constraintlayout.widget.ConstraintLayout>